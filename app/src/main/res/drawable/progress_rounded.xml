<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track (background) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />   <!-- large radius for full round -->
            <solid android:color="#E0E0E0" />   <!-- track color -->
        </shape>
    </item>

    <!-- Progress (foreground) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="50dp" />  <!-- same radius -->
                <solid android:color="@color/tertiary" /> <!-- progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
