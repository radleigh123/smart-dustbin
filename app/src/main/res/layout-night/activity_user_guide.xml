<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_main_background"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Top Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/dark_bg_primary"
            app:shapeAppearanceOverlay="@style/BottomHeaderRounded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:padding="17dp">

                <!-- Back button pinned left -->
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_arrow_back"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back button"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Centered Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="User Guide"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Getting Started Header -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/top_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/getting_started"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five_steps"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Steps Container -->
        <LinearLayout
            android:id="@+id/steps_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Step 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step1_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_card_background">

                    <LinearLayout
                        android:id="@+id/step1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_circle_dark_wifi" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 1: Connect to Network"
                                android:textColor="@color/dark_txt_tertiary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wi-Fi or Bluetooth setup"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step1Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/down_arrow"
                            android:rotation="270"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/dark_card_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_20"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Connect your SmartBin to your home network using Wi-Fi or Bluetooth. Make sure you have your network credentials ready."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step2_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_card_background">

                    <LinearLayout
                        android:id="@+id/step2Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_circle_dark_add" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 2: Add SmartBin"
                                android:textColor="@color/dark_txt_tertiary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register your smart dustbin"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step2Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/down_arrow"
                            android:rotation="270"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step2Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/dark_card_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_20"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Register your SmartBin to your account by scanning the QR code or entering the device ID manually."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step3_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_card_background">

                    <LinearLayout
                        android:id="@+id/step3Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_circle_dark_status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 3: View Bin Status"
                                android:textColor="@color/dark_txt_tertiary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monitor fill levels and activity"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step3Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/down_arrow"
                            android:rotation="270"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step3Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/dark_card_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_20"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check your bin's current fill level, activity history, and usage patterns from the dashboard."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step4_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_card_background">

                    <LinearLayout
                        android:id="@+id/step4Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_circle_dark_alert"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 4: Manage Alerts"
                                android:textColor="@color/dark_txt_tertiary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set up notifications and alerts"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step4Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/down_arrow"
                            android:rotation="270"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step4Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/dark_card_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_20"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Configure custom alerts for when your bin is full, needs maintenance, or requires attention."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step5_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_card_background">

                    <LinearLayout
                        android:id="@+id/step5Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_circle_dark_remote"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step 5: Remote Lid Control"
                                android:textColor="@color/dark_txt_tertiary"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Control your bin remotely"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step5Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/down_arrow"
                            android:rotation="270"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/step5Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/dark_card_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white_20"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open and close your SmartBin lid remotely from anywhere using the app controls."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Help Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/dark_card_background"
            app:layout_constraintTop_toBottomOf="@id/steps_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/help_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_circle_dark_faq"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_more_help"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/support_message"
                    android:textColor="@color/white_50"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_contact_support"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/contact_support"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/dark_btn_primary"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button" />

                <TextView
                    android:id="@+id/btn_view_faqs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_faqs"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>