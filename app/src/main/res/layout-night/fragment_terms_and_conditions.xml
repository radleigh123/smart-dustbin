<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_main_background"
    android:fitsSystemWindows="true">

    <!-- Fixed Top Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_bg_primary"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:cardElevation="4dp"
        app:shapeAppearanceOverlay="@style/BottomHeaderRounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="17dp">

            <!-- Back button pinned left -->
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_Button"
                app:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Centered Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shield_bg"
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:cardCornerRadius="44dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/dark_btn_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/shield_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shield"
                    app:tint="@color/white"
                    android:contentDescription="@string/shield_icon"/>

            </com.google.android.material.card.MaterialCardView>


            <!-- App Name -->
            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_txt_tertiary"
                app:layout_constraintTop_toBottomOf="@id/shield_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/terms_subtitle"
                android:textSize="14sp"
                android:textColor="@color/white_50"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Terms Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/terms_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/dark_card_background"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <!-- Terms Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_terms_settings"
                            app:tint="@color/white"
                            android:contentDescription="@string/terms_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/terms_of_use"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <!-- Terms Content -->
                    <TextView
                        android:id="@+id/terms_content_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_content_1"
                        android:textSize="14sp"
                        android:textColor="@color/white_50"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/terms_content_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_content_2"
                        android:textSize="14sp"
                        android:textColor="@color/white_50"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/terms_content_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_content_3"
                        android:textSize="14sp"
                        android:textColor="@color/white_50"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Agree Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/agree_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="@string/agree_continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/dark_btn_primary"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/terms_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Decline Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/decline_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="@string/decline"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white_50"
                app:cornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/white_50"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                app:backgroundTint="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/agree_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>