<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/dark_bg_main_background"
    tools:context=".view.profile.EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/dark_bg_primary"
            app:shapeAppearanceOverlay="@style/BottomHeaderRounded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:padding="17dp">

                <!-- Back button pinned left -->
                <ImageButton
                    android:id="@+id/btn_Back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_arrow_back"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back button"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- Centered Title -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Profile Image Container -->
        <FrameLayout
            android:id="@+id/profileImageContainer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/top_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp"
                android:backgroundTint="#E0E0E0">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_placeholder"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/btnEditPhoto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_camera"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/dark_btn_primary"
                android:padding="8dp"
                app:tint="@android:color/white" />

        </FrameLayout>

        <!-- Form Container -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profileImageContainer">

            <!-- First Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/dark_txt_tertiary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- First Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/dark_txtbx_background"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/white"
                app:hintEnabled="false"
                app:startIconContentDescription="Profile icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your first name"
                    android:textColorHint="@color/white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:inputType="textPersonName"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Last Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/dark_txt_tertiary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="21dp"/>

            <!-- Last Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/dark_txtbx_background"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_user"
                app:hintEnabled="false"
                app:startIconTint="@color/white"
                app:startIconContentDescription="Profile icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your last name"
                    android:textColorHint="@color/white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    android:paddingStart="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Email"
                android:textColor="@color/dark_txt_tertiary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/dark_txtbx_background"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_email"
                app:hintEnabled="false"
                app:startIconTint="@color/white"
                app:startIconContentDescription="Email icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:textColorHint="@color/white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    android:paddingStart="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contact Number Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Contact Number"
                android:textColor="@color/dark_txt_tertiary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Contact Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/dark_txtbx_background"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_phone"
                app:hintEnabled="false"
                app:startIconTint="@color/white"
                app:startIconContentDescription="Phone icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your contact number"
                    android:textColorHint="@color/white_50"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:padding="16dp"
                    android:paddingStart="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Changes Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/dark_btn_primary"
                android:text="Save Changes"
                style="@style/Widget.TrashbinCloud.Button"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>