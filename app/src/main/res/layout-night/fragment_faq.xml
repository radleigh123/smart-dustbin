<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_main_background"
    android:fitsSystemWindows="true">

    <!-- Fixed Top Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_bg_primary"
        app:strokeColor="@color/transparent"
        app:cardElevation="4dp"
        app:shapeAppearanceOverlay="@style/BottomHeaderRounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="17dp">

            <!-- Back button pinned left -->
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                app:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Centered Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- FAQ Header Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/faq_icon_bg"
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:cardCornerRadius="44dp"
                app:strokeColor="@color/transparent"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dark_btn_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/faq_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_help_circle"
                    app:tint="@color/white"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Title -->
            <TextView
                android:id="@+id/faq_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_txt_tertiary"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/faq_icon_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- FAQ Subtitle -->
            <TextView
                android:id="@+id/faq_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Learn how to set up and get started with TrashBin Cloud"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/faq_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- FAQ Items Container -->
            <LinearLayout
                android:id="@+id/faq_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/faq_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- FAQ Item 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/faq_card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/transparent"
                    app:cardBackgroundColor="@color/dark_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_settings"
                                app:tint="@color/white"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I set up my account?"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="12dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Download the TrashBin Cloud app from the Play Store\n2. Tap 'Sign Up' and enter your email and password\n3. Verify your email address through the link sent to your inbox\n4. Complete your profile with your name and location\n5. You're ready to connect your smart dustbin!"
                            android:textSize="14sp"
                            android:textColor="@color/white_50"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="12dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- FAQ Item 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/faq_card_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/transparent"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/dark_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_settings"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I connect my smart dustbin to the app?"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="12dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Make sure your dustbin is powered on and Bluetooth is enabled on your phone\n2. Open the app and tap 'Add Device' in Settings\n3. Select 'Smart Dustbin' from the device list\n4. Press the pairing button on your dustbin (hold for 3 seconds)\n5. Select your dustbin from the list and tap 'Connect'\n6. Enter your Wi-Fi credentials when prompted\n7. Wait for confirmation that your dustbin is connected"
                            android:textSize="14sp"
                            android:textColor="@color/white_50"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="12dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- FAQ Item 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/faq_card_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/transparent"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/dark_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_settings"
                                app:tint="@color/white"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How do I enable notifications?"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginStart="12dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Go to Settings in the app\n2. Tap 'Notifications'\n3. Toggle on 'Enable Notifications'\n4. Select which alerts you want to receive:\n   • Bin Full Alert (80% capacity)\n   • Collection Reminders\n   • Device Offline Warnings\n   • Weekly Reports\n5. Choose your preferred notification sound\n6. Set quiet hours if needed\n\nMake sure notifications are allowed for TrashBin Cloud in your phone's system settings."
                            android:textSize="14sp"
                            android:textColor="@color/white_50"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="12dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Contact Support Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/support_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/transparent"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dark_bg_primary"
                app:layout_constraintTop_toBottomOf="@id/faq_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- FAQ Header Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="44dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_contact_support"
                            app:tint="?attr/colorPrimary"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Still Need Help?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our support team is here to assist you"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contact_support_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Support"
                        android:textColor="?attr/colorPrimary"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/white"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>