<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.bin.AddBinFragment"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- Header with back button and title -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/back_arrow"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:contentDescription="Back button"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a bin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary"
                android:fontFamily="@font/montserrat_bold" />

        </LinearLayout>

        <!-- Step 1: Pair a bin -->
        <TextView
            android:id="@+id/step1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Pair a bin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tertiary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bin_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin ID"
            android:textSize="14sp"
            android:textColor="@color/tertiary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/step1_title"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bin_id_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/primary"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/bin_id_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bin_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the 11-digit bin ID here"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Step 2: Give it a name -->
        <TextView
            android:id="@+id/step2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Give it a name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tertiary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/bin_id_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bin_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin Name"
            android:textSize="14sp"
            android:textColor="@color/tertiary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/step2_title"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bin_name_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/primary"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/bin_name_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bin_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bin Number 4"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Step 3: Set its location -->
        <TextView
            android:id="@+id/step3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Set its location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tertiary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/bin_name_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where is it found?"
            android:textSize="14sp"
            android:textColor="@color/tertiary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/step3_title"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/location_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/primary"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/location_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/location_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g My room"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Step 4: Set a trash threshold -->
        <TextView
            android:id="@+id/step4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Set a trash threshold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tertiary"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/location_input_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/threshold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How much fill level until we notify you?"
            android:textSize="14sp"
            android:textColor="@color/tertiary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/step4_title"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/threshold_dropdown_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxStrokeColor="@color/primary"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/threshold_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/threshold_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select"
                android:inputType="none"
                android:textSize="14sp"
                android:padding="16dp"
                android:focusable="false"
                android:clickable="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add bin button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_bin_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/border_round_gradient"
            android:text="Add bin"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toBottomOf="@id/threshold_dropdown_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>