<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChangePassword"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_small"
            android:paddingVertical="@dimen/padding_large"
            >
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                app:tint="@color/black"
                android:contentDescription="Back button"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="@dimen/text_xlarge"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_xlarge"
            android:layout_below="@+id/title"
            android:background="@drawable/border_top"
            >
            <LinearLayout
                android:id="@+id/logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="@dimen/margin_large"
                android:background="@drawable/border_round"
                android:backgroundTint="@color/button_open"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_bin2"
                    android:layout_gravity="center"
                    app:tint="@color/white"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/smartdustbin"
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_default"
                android:text="SmartDustBin"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/text_xlarge"
                />
            <TextView
                android:id="@+id/belowSmart"
                android:layout_below="@+id/smartdustbin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Update your account password"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/text_default"
                />
            <TextView
                android:id="@+id/tvNewPassword"
                android:layout_below="@+id/belowSmart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="New Password"
                android:textColor="@color/text_default"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/text_default"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNewPassword"
                android:layout_marginBottom="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/ic_lock"
                app:endIconTint="#999999">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter new password"
                    android:paddingStart="40dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvConfirmNewPassword"
                android:layout_below="@+id/tiNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="Confirm New Password"
                android:textColor="@color/text_default"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/text_default"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvConfirmNewPassword"
                android:layout_marginBottom="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E0E0E0"
                app:boxStrokeWidth="1dp"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/ic_lock"
                app:endIconTint="#999999">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm new password"
                    android:paddingStart="40dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:padding="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiConfirmNewPassword"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/bg_fill_status_green"
                android:backgroundTint="@color/background_color"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Password Requirements:"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_check_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="At least 8 characters" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_check_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="One uppercase letter" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_check_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="One number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_check_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="One special character" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_below="@+id/pw"
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Save Changes"
                style="@style/Widget.TrashbinCloud.Button"
                android:elevation="0dp"
                android:stateListAnimator="@null" />
            <ImageView
                android:id="@+id/securityNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/btnSave"
                android:src="@drawable/ic_security_notice"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>