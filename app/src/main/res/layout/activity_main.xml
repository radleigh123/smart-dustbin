<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <!-- Main content area -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- FIXME: Flexible Medium App Bar not working -->
<!--    <com.google.android.material.appbar.MaterialToolbar-->
<!--        android:id="@+id/topAppBar"-->
<!--        style="@style/Widget.Material3.CollapsingToolbar.Medium"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:navigationIcon="@drawable/logo_half_small"-->
<!--        app:navigationIconTint="@color/black"-->
<!--        />-->

    <!-- Custom Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Dashboard Tab -->
        <LinearLayout
            android:id="@+id/nav_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_selector"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_dashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- History Tab -->
        <LinearLayout
            android:id="@+id/nav_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_selector"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_history"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_history"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_selector"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

<!--    <include layout="@layout/content_main" />-->

</androidx.constraintlayout.widget.ConstraintLayout>